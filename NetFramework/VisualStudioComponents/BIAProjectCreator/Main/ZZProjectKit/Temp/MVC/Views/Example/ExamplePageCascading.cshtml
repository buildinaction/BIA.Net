@model $companyName$.$saferootprojectname$.Business.DTO.MemberDTO

@{
    ViewBag.Title = TextResources.Member;
}

<h2>@ViewBag.Title</h2>

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.T_LabelFor(model => model.Site, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.SiteId, (IEnumerable<SelectListItem>)ViewBag.SiteId, "-----------------------------", htmlAttributes: new { @class = "form-control", @style = "display: inline;" })
        </div>
    </div>

    <div class="form-group">
        @Html.T_LabelFor(model => model.User, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.CascadingDropDownListFor(model => model.UserId, (IEnumerable<CascadingSelectListItem>)ViewBag.MemberId, "-----------------------------", htmlAttributes: new { @class = "form-control", @style = "display: inline;" })
            <i>(Example CascadingDropDownListFor)</i>
        </div>
    </div>

    <div class="form-group">
        @Html.T_LabelFor(model => model.User, htmlAttributes: new { @class = "control-label col-md-2" }) 
        <div class="col-md-10">
            @Html.CascadingDropDownList("UserId2", (IEnumerable<CascadingSelectListItem>)ViewBag.MemberId, "-----------------------------", htmlAttributes: new { @class = "form-control", @style = "display: inline;" })
            <i>(Example CascadingDropDownList)</i>
        </div>
    </div>

</div>




