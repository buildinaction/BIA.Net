@{
    ViewBag.Title = AppliResources.ExamplePage + " Upload Screen Capture"; ;
}
<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-sm-12" style="color:green">
        @ViewBag.Message
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <label>Copy paste a picture from snipping tool</label>
        @using (Html.BeginForm("UploadScreenCapture", "Example", FormMethod.Post, new { id = "UploadForm" }))
        {
            <div>
                <canvas style="border:1px solid grey;" id="canvasPrintScreen" width="500" height="300"></canvas>
                @Html.Hidden("printScreenData", null)
            </div>
        }
    </div>
</div>

@section Buttons {
    <div class="btn-action-container">
        <div class="btn-action">
            <button type="button" id="btn1" class="btn btn-2">@TextResources.Cancel</button>
        </div>
        <div class="btn-action">
            <button onclick="$('#UploadForm').submit();" class="btn btn-2">@TextResources.Save</button>
        </div>
    </div>
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            PastePrintScreen.Init("canvasPrintScreen", true, "printScreenData");
        });
    </script>
}