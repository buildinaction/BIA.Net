  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Safran.BIATemplate.Crosscutting.Ioc\Safran.BIATemplate.Crosscutting.Ioc.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="appsettings.DMEU_INT.json">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
    </Content>
    <Content Update="appsettings.DMEU_PRA.json">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
    </Content>
    <Content Update="appsettings.DMEU_PRD.json">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
